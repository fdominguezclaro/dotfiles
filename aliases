# Unix
alias tlf="tail -f"
alias ll='ls -al'
alias lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias e="$EDITOR"
alias v="$VISUAL"
alias help="tldr"

## Easier navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# Bundler
alias b="bundle"

# Rails
alias ber="bundle exec rspec"
alias beg="bundle exec guard"
alias bem="bundle exec rails db:migrate"
alias bes="bundle exec rails server"
alias sr="spring rspec"
alias srs="spring rails server"
alias src="spring rails console"

# Paths shortcuts
alias uni="cd ~/Google\ Drive/U/"
alias pla="cd ~/Platanus"

# Pretty print the path
alias path="echo $PATH | tr -s ':' '\n'"

# Git
alias gfix="git commit --fixup "
alias grauto="git rebase -i --autosquash master"

# switchaudio
alias samb="SwitchAudioSource -s 'MacBook Pro Speakers'"
alias saap="SwitchAudioSource -s 'FDOM AirPods Pro'"
alias satv="SwitchAudioSource -s 'SAMSUNG'"
alias sawh="SwitchAudioSource -s 'WH-1000XM2'"

# Heroku
alias hkas="heroku accounts:set"

# Other aliases
eval $(thefuck --alias)
